{
  "name": "@near-js/signers",
  "version": "0.2.0",
  "description": "Modules for cryptographically signing messages",
  "types": "./dist/esm/signers/src/index.d.ts",
  "main": "./dist/cjs/signers/src/index.js",
  "module": "./dist/esm/signers/src/index.js",
  "type": "module",
  "scripts": {
    "build": "yarn compile:esm",
    "postbuild": "yarn compile:cjs",
    "compile:esm": "tsc -p tsconfig.esm.json",
    "compile:cjs": "tsc -p tsconfig.cjs.json",
    "lint": "eslint -c ../../.eslintrc.ts.yml src/**/*.ts test/**/*.ts --no-eslintrc",
    "lint:fix": "eslint -c ../../.eslintrc.ts.yml src/**/*.ts test/**/*.ts --no-eslintrc --fix",
    "test": "jest",
    "clean": "yarn rimraf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@near-js/crypto": "workspace:*",
    "@near-js/keystores": "workspace:*",
    "@noble/hashes": "1.3.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^22.7.4",
    "jest": "29.7.0",
    "rimraf": "6.0.1",
    "ts-jest": "29.1.5",
    "typescript": "^5.6.2"
  },
  "files": [
    "./dist/esm",
    "./dist/cjs"
  ],
  "exports": {
    ".": {
      "require": "./dist/cjs/signers/src/index.js",
      "import": "./dist/esm/signers/src/index.js"
    }
  }
}
