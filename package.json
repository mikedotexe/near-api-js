{
  "name": "@near-js/monorepo",
  "scripts": {
    "build": "yarn workspaces foreach --all run build",
    "build:exclude": "yarn workspaces foreach --exclude <excluded-package> run build",
    "build:package": "yarn workspace <package-name> run build",
    "release": "changeset publish",
    "docs:generate": "typedoc"
  },
  "private": true,
  "workspaces": [
    "packages/accounts",
    "packages/biometric-ed25519",
    "packages/crypto",
    "packages/keystores",
    "packages/keystores-browser",
    "packages/keystores-node",
    "packages/near-api-js",
    "packages/providers",
    "packages/signers",
    "packages/transactions",
    "packages/types",
    "packages/utils",
    "packages/wallet-account"
  ],
  "engines": {
    "node": ">=20.15.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.6",
    "@changesets/cli": "2.24.4",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "commitlint": "19.3.0",
    "eslint": "8.20.0",
    "rimraf": "6.0.1",
    "typedoc": "0.25.13",
    "typescript": "^5.6.2"
  }
}
